<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/material_com_card_view_content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_four"
    android:elevation="@dimen/elevation_ten"
    card_view:cardCornerRadius="@dimen/radius_four">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view">

    <ImageView
        android:id="@+id/material_com_card_view_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dopshadow_to_top">

            <TextView
                android:id="@+id/hotel_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@android:color/white" />
        </RelativeLayout>


    </RelativeLayout>


